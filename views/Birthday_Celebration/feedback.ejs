            border-radius: 15px;
            padding: 20px;
            color: white;
            font-family: 'Poppins', sans-serif;
            font-size: 1rem;
            resize: vertical;
            min-height: 150px;
            transition: all 0.3s ease;
        }

        .form-textarea:focus {
            outline: none;
            border-color: #ff66cc;
            box-shadow: 0 0 20px rgba(255, 102, 204, 0.5);
            background: rgba(255, 255, 255, 0.15);

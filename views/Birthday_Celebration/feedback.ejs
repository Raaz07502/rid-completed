    <script>
        // DOM Elements
        const hamburger = document.getElementById('hamburger');
        const navMenu = document.getElementById('navMenu');
        const starsContainer = document.getElementById('stars');
        const heartBg = document.getElementById('heartBg');
        const submitBtn = document.getElementById('submitFeedback');
        const feedbackText = document.getElementById('feedbackText');
        const btnText = document.getElementById('btnText');
        const loadingSpinner = document.getElementById('loadingSpinner');
        const successMessage = document.getElementById('successMessage');

        // State Variables
        let isMenuOpen = false;

        // Create stars background
        function createStars() {
            const starCount = 200;

            for (let i = 0; i < starCount; i++) {
                const star = document.createElement('div');
                star.classList.add('star');

                const size = Math.random() * 3;
                const left = Math.random() * 100;
                const top = Math.random() * 100;
                const opacity = 0.2 + Math.random() * 0.8;
                const twinkleDelay = Math.random() * 5;

                star.style.width = `${size}px`;
                star.style.height = `${size}px`;
                star.style.left = `${left}%`;
                star.style.top = `${top}%`;
                star.style.opacity = opacity;
                star.style.animationDelay = `${twinkleDelay}s`;

                starsContainer.appendChild(star);
            }
        }

        // Create floating hearts
        function createFloatingHearts() {
            const heartCount = 30;
            const hearts = ['‚ù§', 'üíñ', 'üíï', 'üíó', 'üíì', 'üíû', 'üíò', 'üíù'];

            for (let i = 0; i < heartCount; i++) {
                setTimeout(() => {
                    const heart = document.createElement('div');
                    heart.classList.add('heart-particle');
                    heart.innerHTML = hearts[Math.floor(Math.random() * hearts.length)];

                    const size = 20 + Math.random() * 30;
                    const left = Math.random() * 100;
                    const duration = 15 + Math.random() * 20;
                    const delay = Math.random() * 5;
                    const color = `hsl(${Math.random() * 60 + 300}, 100%, 70%)`;

                    heart.style.left = `${left}%`;
                    heart.style.fontSize = `${size}px`;
                    heart.style.color = color;
                    heart.style.animationDelay = `${delay}s`;
                    heart.style.animationDuration = `${duration}s`;

                    heartBg.appendChild(heart);

                    setTimeout(() => {
                        if (heart.parentNode) {
                            heart.remove();
                        }
                    }, (duration + delay) * 1000);
                }, i * 500);
            }
        }

        // Create heart burst effect
        function createHeartBurst(count, originX, originY) {
            const hearts = ['‚ù§', 'üíñ', 'üíï', 'üíó', 'üíì', 'üíû'];

            for (let i = 0; i < count; i++) {
                setTimeout(() => {
                    const heart = document.createElement('div');
                    heart.innerHTML = hearts[Math.floor(Math.random() * hearts.length)];
                    heart.style.position = 'fixed';
                    heart.style.left = `${originX}px`;
                    heart.style.top = `${originY}px`;
                    heart.style.fontSize = `${20 + Math.random() * 30}px`;
                    heart.style.color = `hsl(${Math.random() * 60 + 300}, 100%, 70%)`;
                    heart.style.pointerEvents = 'none';
                    heart.style.zIndex = '1000';
                    heart.style.opacity = '0.8';
                    heart.style.textShadow = '0 0 10px currentColor';

                    document.body.appendChild(heart);

                    const angle = Math.random() * Math.PI * 2;
                    const distance = 100 + Math.random() * 200;
                    const duration = 1000 + Math.random() * 1000;

                    const animation = heart.animate([
                        {
                            transform: 'translate(0, 0) scale(1)',
                            opacity: 0.8
                        },
                        {
                            transform: `translate(${Math.cos(angle) * distance}px, ${Math.sin(angle) * distance}px) scale(1.5)`,
                            opacity: 0
                        }
                    ], {
                        duration: duration,
                        easing: 'cubic-bezier(0.215, 0.610, 0.355, 1)'
                    });

                    animation.onfinish = () => heart.remove();
                }, i * 50);
            }
        }

        // Toggle mobile menu
        function toggleMenu() {
            isMenuOpen = !isMenuOpen;

            if (isMenuOpen) {
                navMenu.classList.add('active');
                hamburger.innerHTML = '<i class="fas fa-times"></i>';
                hamburger.setAttribute('aria-expanded', 'true');
                hamburger.style.background = 'rgba(255, 102, 204, 0.3)';
                document.body.style.overflow = 'hidden';
            } else {
                navMenu.classList.remove('active');
                hamburger.innerHTML = '<i class="fas fa-bars"></i>';
                hamburger.setAttribute('aria-expanded', 'false');
                hamburger.style.background = 'rgba(255, 102, 204, 0.1)';
                document.body.style.overflow = 'auto';
            }
        }

        // Handle feedback submission
        submitBtn.addEventListener('click', () => {
            const feedback = feedbackText.value.trim();

            // Simple validation
            if (feedback.length < 5) {
                feedbackText.style.animation = 'shake 0.5s';
                setTimeout(() => feedbackText.style.animation = '', 500);
                feedbackText.focus();
                return;
            }

            // Loading UI
            btnText.style.display = 'none';
            loadingSpinner.style.display = 'block';
            submitBtn.disabled = true;

            // Fake submit delay (for nice UX)
            setTimeout(() => {
                // Show success message
                successMessage.style.display = 'block';
                feedbackText.value = '';

                // Create celebration hearts
                const rect = submitBtn.getBoundingClientRect();
                createHeartBurst(
                    20,
                    rect.left + rect.width / 2,
                    rect.top + rect.height / 2
                );

                // Scroll to show success message
                successMessage.scrollIntoView({
                    behavior: 'smooth',
                    block: 'center'
                });

                // Hide success after 5 seconds
                setTimeout(() => {
                    successMessage.style.display = 'none';
                }, 5000);

                // Reset button
                btnText.style.display = 'block';
                loadingSpinner.style.display = 'none';
                submitBtn.disabled = false;

            }, 1200);
        });

        // Add shake animation for empty feedback
        const style = document.createElement('style');
        style.textContent = `
            @keyframes shake {
                0%, 100% { transform: translateX(0); }
                10%, 30%, 50%, 70%, 90% { transform: translateX(-5px); }
                20%, 40%, 60%, 80% { transform: translateX(5px); }
            }
        `;
        document.head.appendChild(style);

        // Initialize
        window.addEventListener('load', () => {
            createStars();
            createFloatingHearts();
            
            // Event Listeners
            hamburger.addEventListener('click', toggleMenu);
            
            // Close mobile menu when clicking a link
            document.querySelectorAll('.nav-link').forEach(link => {
                link.addEventListener('click', () => {
                    if (isMenuOpen) {
                        toggleMenu();
                    }
                });
            });

            // Close menu with Escape key
            document.addEventListener('keydown', (e) => {
                if (e.key === 'Escape' && isMenuOpen) {
                    toggleMenu();
                }
            });

            // Handle window resize
            window.addEventListener('resize', () => {
                if (window.innerWidth > 768 && isMenuOpen) {
                    toggleMenu();
                }
            });

            // Auto-focus on textarea
            setTimeout(() => {
                feedbackText.focus();
            }, 1000);

            // Replenish floating hearts periodically
            setInterval(() => {
                createFloatingHearts();
            }, 15000);
        });
    </script>
</body>
</html>
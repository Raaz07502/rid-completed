            }

            .form-label {
                font-size: 1.1rem;
            }

            .submit-btn {
                padding: 15px 30px;
                font-size: 1.1rem;
            }
        }

        @media (max-width: 480px) {
            .nav-logo {
                font-size: 1.5rem;
            }

            .feedback-title {
                font-size: 2.5rem;
            }

            .feedback-subtitle {
                font-size: 1rem;
            }

            .feedback-form {
                padding: 20px;
            }

            .success-text {
                font-size: 2rem;
            }

            .success-desc {
                font-size: 1rem;
            }
        }
    </style>

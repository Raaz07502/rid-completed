            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            text-decoration: none;
            position: relative;
            padding-right: 15px;
            white-space: nowrap;
        }

        .nav-logo::after {
            content: '';
            position: absolute;
            right: 0;
            top: 50%;
            transform: translateY(-50%);
            width: 2px;
            height: 30px;
            background: linear-gradient(to bottom, #ff66cc, #ffcc00);
            animation: pulseGlow 2s infinite;
        }

        /* HAMBURGER MENU */
.hamburger {

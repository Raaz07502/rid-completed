                            <p style="color: #9999ff; font-size: 0.9rem;">
                                © 2026 यादों, रिश्तों और भावनाओं की कहानी।<br>
                                स्नेह, सम्मान और सच्चे दिल से
                            </p>
                        </div>
                    </div>
                </footer>



                <script>
                    // DOM Elements
                    const hamburger = document.getElementById('hamburger');
                    const navMenu = document.getElementById('navMenu');
                    const navLinks = document.querySelectorAll('.nav-link');
                    const starsContainer = document.getElementById('stars');
                    const journeyHearts = document.getElementById('journeyHearts');
                    const cardMe = document.getElementById('cardMe');
                    const cardYou = document.getElementById('cardYou');
                    const centerHeart = document.getElementById('centerHeart');
                    const startCrossingBtn = document.getElementById('startCrossingBtn');
                    const stopCrossingBtn = document.getElementById('stopCrossingBtn');
                    const musicToggleBtn = document.getElementById('musicToggleBtn');
                    const backgroundMusic = document.getElementById('backgroundMusic');
                    const musicPlayer = document.getElementById('musicPlayer');
                    const closePlayer = document.getElementById('closePlayer');
                    const playBtn = document.getElementById('playBtn');
                    const pauseBtn = document.getElementById('pauseBtn');
                    const volumeSlider = document.getElementById('volumeSlider');
                    const loveFill = document.getElementById('loveFill');
                    const countdownDays = document.getElementById('days');
                    const countdownHours = document.getElementById('hours');
                    const countdownMinutes = document.getElementById('minutes');
                    const countdownSeconds = document.getElementById('seconds');
                    const timelineMarkers = document.querySelectorAll('.timeline-marker');
                    const timelineContents = document.querySelectorAll('.timeline-content');
                    const timelineOverlay = document.getElementById('timelineOverlay');

                    // State Variables
                    let isCrossing = false;
                    let isMusicPlaying = false;
                    let isMusicPlayerVisible = false;
                    let activeTimelineMarker = null;

                    // Create stars background
                    function createStars() {
                        const starCount = window.innerWidth < 768 ? 150 : 300;

                        for (let i = 0; i < starCount; i++) {
                            const star = document.createElement('div');
                            star.classList.add('star');

                            const size = Math.random() * 3;
                            const left = Math.random() * 100;
                            const top = Math.random() * 100;
                            const opacity = 0.2 + Math.random() * 0.8;
                            const twinkleDelay = Math.random() * 5;

                            star.style.width = `${size}px`;
                            star.style.height = `${size}px`;
                            star.style.left = `${left}%`;
                            star.style.top = `${top}%`;
                            star.style.opacity = opacity;
                            star.style.animationDelay = `${twinkleDelay}s`;

                            starsContainer.appendChild(star);
                        }
                    }

                    // Create floating hearts for journey section
                    function createJourneyHearts() {
                        const heartCount = window.innerWidth < 768 ? 40 : 80;
                        const hearts = ['❤', '💖', '💕', '💗', '💓', '💞', '💘', '💝'];

                        for (let i = 0; i < heartCount; i++) {
                            setTimeout(() => {
                                const heart = document.createElement('div');
                                heart.classList.add('journey-heart');
                                heart.innerHTML = hearts[Math.floor(Math.random() * hearts.length)];

                                const size = window.innerWidth < 768 ? 15 + Math.random() * 20 : 20 + Math.random() * 40;
                                const left = Math.random() * 100;
                                const duration = 15 + Math.random() * 20;
                                const delay = Math.random() * 5;
                                const color = `hsl(${Math.random() * 360}, 100%, 70%)`;

                                heart.style.left = `${left}%`;
                                heart.style.fontSize = `${size}px`;
                                heart.style.color = color;
                                heart.style.animationDelay = `${delay}s`;
                                heart.style.animationDuration = `${duration}s`;

                                journeyHearts.appendChild(heart);

                                // Remove heart after animation
                                setTimeout(() => {
                                    if (heart.parentNode) {
                                        heart.remove();
                                    }
                                }, (duration + delay) * 1000);
                            }, i * 500);
                        }
                    }

                    // Start cards crossing animation
                    function startCrossing() {
                        if (!isCrossing) {
                            cardMe.classList.add('crossing');
                            cardYou.classList.add('crossing');
                            isCrossing = true;

                            startCrossingBtn.innerHTML = '<i class="fas fa-sync-alt"></i> Crossing...';
                            startCrossingBtn.style.background = 'linear-gradient(135deg, #ff6600, #ffcc00)';

                            // Create heart burst from center
                            createHeartBurst(10,
                                centerHeart.getBoundingClientRect().left + centerHeart.offsetWidth / 2,
                                centerHeart.getBoundingClientRect().top + centerHeart.offsetHeight / 2
                            );
                        }
                    }

                    // Stop cards crossing animation
                    function stopCrossing() {
                        if (isCrossing) {
                            cardMe.classList.remove('crossing');
                            cardYou.classList.remove('crossing');
                            isCrossing = false;

                            startCrossingBtn.innerHTML = '<i class="fas fa-play-circle"></i> Start Cards Crossing';
                            startCrossingBtn.style.background = 'linear-gradient(135deg, #ff0066, #ff6600)';
                        }
                    }

                    // Toggle music player visibility
                    function toggleMusicPlayer() {
                        if (!isMusicPlayerVisible) {
                            musicPlayer.style.display = 'block';
                            isMusicPlayerVisible = true;
                            musicToggleBtn.innerHTML = '<i class="fas fa-volume-up"></i> Hide Music Player';
                        } else {
                            musicPlayer.style.display = 'none';
                            isMusicPlayerVisible = false;
                            musicToggleBtn.innerHTML = '<i class="fas fa-music"></i> Show Music Player';
                        }
                    }

                    // Play background music
                    function playMusic() {
                        if (!isMusicPlaying) {
                            // Set volume before playing
                            backgroundMusic.volume = volumeSlider.value / 100;

                            backgroundMusic.play().then(() => {
                                isMusicPlaying = true;
                                musicToggleBtn.innerHTML = '<i class="fas fa-pause"></i> Pause Music';
                                playBtn.innerHTML = '<i class="fas fa-pause"></i>';

                                // Show music player if hidden
                                if (!isMusicPlayerVisible) {
                                    toggleMusicPlayer();
                                }
                            }).catch(error => {
                                console.log("Autoplay prevented. User interaction required.");
                                // Show alert only once
                                if (!sessionStorage.getItem('musicAlertShown')) {
                                    alert("Click the Play button in the music player to start the love song!");
                                    sessionStorage.setItem('musicAlertShown', 'true');
                                }
                            });
                        }
                    }

                    // Pause background music
                    function pauseMusic() {
                        if (isMusicPlaying) {
                            backgroundMusic.pause();
                            isMusicPlaying = false;
                            musicToggleBtn.innerHTML = '<i class="fas fa-music"></i> Play Love Music';
                            playBtn.innerHTML = '<i class="fas fa-play"></i>';
                        }
                    }

                    function updateVolume() {
                        backgroundMusic.volume = volumeSlider.value / 100;
                    }

                    // Create heart burst animation
                    function createHeartBurst(count, originX, originY) {
                        const hearts = ['❤', '💖', '💕', '💗', '💓', '💞'];

                        for (let i = 0; i < count; i++) {
                            setTimeout(() => {
                                const heart = document.createElement('div');
                                heart.innerHTML = hearts[Math.floor(Math.random() * hearts.length)];
                                heart.style.position = 'fixed';
                                heart.style.left = `${originX}px`;
                                heart.style.top = `${originY}px`;
                                heart.style.fontSize = `${15 + Math.random() * 25}px`;
                                heart.style.color = `hsl(${Math.random() * 360}, 100%, 70%)`;
                                heart.style.pointerEvents = 'none';
                                heart.style.zIndex = '1000';
                                heart.style.opacity = '0.8';
                                heart.style.textShadow = '0 0 8px currentColor';

                                document.body.appendChild(heart);

                                // Random movement
                                const angle = Math.random() * Math.PI * 2;
                                const distance = 80 + Math.random() * 150;
                                const duration = 800 + Math.random() * 800;

                                const animation = heart.animate([
                                    {
                                        transform: 'translate(0, 0) scale(1)',
                                        opacity: 0.8
                                    },
                                    {
                                        transform: `translate(${Math.cos(angle) * distance}px, ${Math.sin(angle) * distance}px) scale(1.3)`,
                                        opacity: 0
                                    }
                                ], {
                                    duration: duration,
                                    easing: 'cubic-bezier(0.215, 0.610, 0.355, 1)'
                                });

                                animation.onfinish = () => heart.remove();
                            }, i * 50);
                        }
                    }

                    // Timeline functions for mobile - COMPLETELY REDONE
                    function handleTimelineClick(marker) {
                        if (window.innerWidth <= 768) {
                            // Close any open timeline content
                            if (activeTimelineMarker && activeTimelineMarker !== marker) {
                                activeTimelineMarker.classList.remove('active');
                            }

                            // Toggle current marker
                            marker.classList.toggle('active');

                            // Update active marker
                            if (marker.classList.contains('active')) {
                                activeTimelineMarker = marker;
                                // Show overlay
                                timelineOverlay.classList.add('active');
                            } else {
                                activeTimelineMarker = null;
                                // Hide overlay
                                timelineOverlay.classList.remove('active');
                            }

                            // Close on overlay click
                            timelineOverlay.onclick = () => {
                                if (activeTimelineMarker) {
                                    activeTimelineMarker.classList.remove('active');
                                    activeTimelineMarker = null;
                                }
                                timelineOverlay.classList.remove('active');
                            };

                            // Close on content click (the × button)
                            const content = marker.querySelector('.timeline-content');
                            content.onclick = (e) => {
                                if (e.target === content || e.target.tagName === 'H4' || e.target.tagName === 'P') {
                                    return;
                                }
                                marker.classList.remove('active');
                                activeTimelineMarker = null;
                                timelineOverlay.classList.remove('active');
                            };
                        }
                    }

                    // Animate love meter
                    function animateLoveMeter() {
                        let width = 95;
                        const interval = setInterval(() => {
                            width = width === 95 ? 100 : 95;
                            loveFill.style.width = `${width}%`;
                        }, 2000);
                    }

                    // Update countdown timer
                    function updateCountdown() {
                        const now = new Date();
                        const nextAnniversary = new Date(now.getFullYear() + 1, 0, 1);

                        const diff = nextAnniversary - now;

                        const days = Math.floor(diff / (1000 * 60 * 60 * 24));
                        const hours = Math.floor((diff % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                        const minutes = Math.floor((diff % (1000 * 60 * 60)) / (1000 * 60));
                        const seconds = Math.floor((diff % (1000 * 60)) / 1000);

                        countdownDays.textContent = days.toString().padStart(2, '0');
                        countdownHours.textContent = hours.toString().padStart(2, '0');
                        countdownMinutes.textContent = minutes.toString().padStart(2, '0');
                        countdownSeconds.textContent = seconds.toString().padStart(2, '0');
                    }

                    // Activate photo cards
                    function activateCards() {
                        setTimeout(() => {
                            cardMe.classList.add('active');
                        }, 300);

                        setTimeout(() => {
                            cardYou.classList.add('active');
                        }, 600);

                        // Auto start crossing on desktop
                        if (window.innerWidth > 991) {
                            setTimeout(() => {
                                startCrossing();
                            }, 1500);
                        }
                    }

                    // Handle hamburger menu
                    hamburger.addEventListener('click', () => {
                        navMenu.classList.toggle('active');
                        hamburger.innerHTML = navMenu.classList.contains('active')
                            ? '<i class="fas fa-times"></i>'
                            : '<i class="fas fa-bars"></i>';
                    });

                    // Close mobile menu when clicking a link
                    navLinks.forEach(link => {
                        link.addEventListener('click', () => {
                            navMenu.classList.remove('active');
                            hamburger.innerHTML = '<i class="fas fa-bars"></i>';
                        });
                    });

                    // Timeline marker click events - UPDATED
                    timelineMarkers.forEach(marker => {
                        marker.addEventListener('click', (e) => {
                            e.stopPropagation();
                            handleTimelineClick(marker);
                        });
                    });

                    // Event Listeners
                    startCrossingBtn.addEventListener('click', startCrossing);
                    stopCrossingBtn.addEventListener('click', stopCrossing);
                    musicToggleBtn.addEventListener('click', toggleMusicPlayer);
                    centerHeart.addEventListener('click', () => {
                        createHeartBurst(15,
                            centerHeart.getBoundingClientRect().left + centerHeart.offsetWidth / 2,
                            centerHeart.getBoundingClientRect().top + centerHeart.offsetHeight / 2
                        );
                    });

                    closePlayer.addEventListener('click', toggleMusicPlayer);
                    playBtn.addEventListener('click', playMusic);
                    pauseBtn.addEventListener('click', pauseMusic);
                    volumeSlider.addEventListener('input', updateVolume);

                    // Handle image loading errors
                    document.querySelectorAll('.card-img').forEach(img => {
                        img.onerror = function () {
                            // Fallback to Unsplash image
                            if (this.alt.includes('My Photo')) {
                                this.src = 'https://images.unsplash.com/photo-1544005313-94ddf0286df2?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80';
                            } else {
                                this.src = 'https://images.unsplash.com/photo-1494790108755-2616b612b786?ixlib=rb-4.0.3&auto=format&fit=crop&w=600&q=80';
                            }
                        };
                    });

                    // Initialize
                    window.addEventListener('load', () => {
                        createStars();
                        createJourneyHearts();
                        animateLoveMeter();
                        updateCountdown();
                        activateCards();

                        // Try to play music automatically with user gesture
                        musicToggleBtn.addEventListener('click', () => {
                            if (!isMusicPlaying) {
                                playMusic();
                            } else {
                                pauseMusic();
                            }
                        });

                        // Update countdown every second
                        setInterval(updateCountdown, 1000);

                        // Replenish journey hearts periodically
                        setInterval(() => {
                            createJourneyHearts();
                        }, 15000);
                    });

                    // Handle window resize
                    window.addEventListener('resize', () => {
                        // Update crossing animation based on screen size
                        if (window.innerWidth <= 991 && isCrossing) {
                            // On mobile, use different crossing animation
                            cardMe.classList.remove('crossing');
                            cardYou.classList.remove('crossing');
                            setTimeout(() => {
                                if (isCrossing) {
                                    cardMe.classList.add('crossing');
                                    cardYou.classList.add('crossing');
                                }
                            }, 50);
                        }

                        // Close mobile timeline content on resize to desktop
                        if (window.innerWidth > 768 && activeTimelineMarker) {
                            activeTimelineMarker.classList.remove('active');
                            activeTimelineMarker = null;
                            timelineOverlay.classList.remove('active');
                        }
                    });

                    // Set initial volume
                    updateVolume();
                </script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link
        href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@700&family=Poppins:wght@300;400;600;700&family=Great+Vibes&family=Sacramento&family=Playfair+Display:wght@700&family=Cinzel:wght@700&family=Parisienne&family=Amatic+SC:wght@700&family=WindSong:wght@500&family=Rouge+Script&family=Mr+De+Haviland&family=Qwitcher+Grypen:wght@700&display=swap"

    <link rel="stylesheet" href="/css/journey.css">
    <style>
         /* RESET & BASE STYLES */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        html {
            scroll-behavior: smooth;
        }
        
        body {
            font-family: 'Poppins', sans-serif;
            background: #000;
            color: #fff;
            min-height: 100vh;
            overflow-x: hidden;
            position: relative;
            background: 
                radial-gradient(circle at 20% 30%, rgba(120, 0, 80, 0.3) 0%, transparent 50%),
                radial-gradient(circle at 80% 70%, rgba(0, 100, 120, 0.3) 0%, transparent 50%),
                radial-gradient(circle at 40% 80%, rgba(120, 80, 0, 0.3) 0%, transparent 50%),
                linear-gradient(135deg, #0a0a2a 0%, #1a0033 30%, #33001a 70%, #000d33 100%);
        }
        
        /* ANIMATED NAVBAR */
        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1000;
            background: rgba(10, 10, 42, 0.95);
            backdrop-filter: blur(15px);
            border-bottom: 2px solid rgba(255, 102, 204, 0.3);
            padding: 15px 0;
            transform: translateY(-100%);
            animation: slideDown 1s forwards 0.5s;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
        }
        
        @keyframes slideDown {
            to { transform: translateY(0); }
        }
        
        .nav-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 0 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: relative;
        }
        
        .nav-logo {
            font-family: 'Great Vibes', cursive;
            font-size: 2rem;
            background: linear-gradient(to right, #ff66cc, #ffcc00);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            text-decoration: none;
            position: relative;
            padding-right: 15px;
        }
        
        @media (max-width: 768px) {
            .nav-logo {
                font-size: 1.8rem;
            }
        }
        
        .nav-logo::after {
            content: '';
            position: absolute;
            right: 0;
            top: 50%;
            transform: translateY(-50%);
            width: 2px;
            height: 30px;
            background: linear-gradient(to bottom, #ff66cc, #ffcc00);
            animation: pulseGlow 2s infinite;
        }
        
        .nav-menu {
            display: flex;
            gap: 20px;
            list-style: none;
        }
        
        @media (max-width: 768px) {
            .nav-menu {
                position: fixed;
                top: 0;
                right: -100%;
                width: 80%;
                max-width: 320px;
                height: 100vh;
                background: rgba(10, 10, 42, 0.98);
                backdrop-filter: blur(15px);
                flex-direction: column;
                justify-content: flex-start;
                align-items: flex-start;
                padding: 100px 20px 20px;
                gap: 15px;
                transition: right 0.4s ease-in-out;
                z-index: 999;
            }
            
            .nav-menu.active {
                right: 0;
            }
        }
        
        .nav-item {
            position: relative;
        }
        
        @media (max-width: 768px) {
            .nav-item {
                width: 100%;
            }
        }
        
        .nav-link {
            color: #fff;
            text-decoration: none;
            font-size: 1rem;
            font-weight: 600;
            padding: 8px 15px;
            border-radius: 50px;
            transition: all 0.4s ease;
            display: flex;
            align-items: center;
            gap: 8px;
            position: relative;
            overflow: hidden;
        }
        
        @media (max-width: 768px) {
            .nav-link {
                width: 100%;
                justify-content: flex-start;
                font-size: 1.1rem;
                padding: 12px 20px;
            }
        }
        
        .nav-link::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.7s;
        }
        
        .nav-link:hover::before {
            left: 100%;
        }
        
        .nav-link:hover {
            background: linear-gradient(135deg, rgba(255, 102, 204, 0.2), rgba(255, 204, 0, 0.2));
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(255, 102, 204, 0.3);
        }
        
        .nav-link.active {
            background: linear-gradient(135deg, #ff0066, #ff6600);
            box-shadow: 0 0 30px rgba(255, 102, 204, 0.5);
        }
        
        .nav-icon {
            font-size: 1.2rem;
            animation: rotateIcon 3s infinite linear;
        }
        
        /* HAMBURGER MENU */
        .hamburger {
            display: none;
            cursor: pointer;
            background: none;
            border: none;
            color: white;
            font-size: 1.8rem;
            z-index: 1001;
        }
        
        @media (max-width: 768px) {
            .hamburger {
                display: block;
            }
        }
        
        /* OUR JOURNEY SECTION */
        .journey-section {
            min-height: 100vh;
            padding: 120px 15px 80px;
            position: relative;
            overflow: hidden;
        }
        
        @media (max-width: 768px) {
            .journey-section {
                padding: 100px 15px 60px;
            }
        }
        
        /* Animated Heart Background for Journey */
        .journey-hearts {
            position: absolute;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            z-index: 1;
            pointer-events: none;
        }
        
        .journey-heart {
            position: absolute;
            font-size: 20px;
            color: #ff3366;
            opacity: 0;
            animation: journeyHeartFloat 20s infinite linear;
        }
        
        @media (max-width: 768px) {
            .journey-heart {
                font-size: 16px;
            }
        }
        
        /* Journey Title Container */
        .journey-title-container {
            text-align: center;
            margin-bottom: 60px;
            position: relative;
            z-index: 10;
        }
        
        @media (max-width: 768px) {
            .journey-title-container {
                margin-bottom: 40px;
            }
        }
        
        .journey-main-title {
            font-family: 'Qwitcher Grypen', cursive;
            font-size: 5rem;
            color: #ffcc00;
            margin-bottom: 10px;
            text-shadow: 
                0 0 30px rgba(255, 204, 0, 0.8),
                0 0 60px rgba(255, 204, 0, 0.5);
            animation: journeyTitleGlow 4s infinite alternate;
        }
        
        @media (max-width: 768px) {
            .journey-main-title {
                font-size: 4rem;
            }
        }
        
        @media (max-width: 480px) {
            .journey-main-title {
                font-size: 3.5rem;
            }
        }
        
        .journey-subtitle {
            font-family: 'Parisienne', cursive;
            font-size: 2rem;
            color: #ffccff;
            margin-bottom: 20px;
            animation: subtitleFloat 6s infinite ease-in-out;
        }
        
        @media (max-width: 768px) {
            .journey-subtitle {
                font-size: 1.8rem;
            }
        }
        
        @media (max-width: 480px) {
            .journey-subtitle {
                font-size: 1.6rem;
            }
        }
        
        /* Heart Divider Animation */
        .heart-divider {
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 30px 0;
        }
        
        @media (max-width: 768px) {
            .heart-divider {
                margin: 20px 0;
            }
        }
        
        .heart-divider-line {
            width: 80px;
            height: 2px;
            background: linear-gradient(to right, transparent, #ff66cc, transparent);
            margin: 0 15px;
        }
        
        @media (max-width: 768px) {
            .heart-divider-line {
                width: 50px;
            }
        }
        
        .heart-divider-icon {
            font-size: 2rem;
            color: #ff3366;
            animation: heartbeat 1.5s infinite;
        }
        
        /* Photo Cards Container - IMPROVED FOR MOBILE */
        .cards-container {
            position: relative;
            width: 100%;
            height: auto;
            margin: 40px auto;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            z-index: 20;
            gap: 60px;
            padding: 20px 0;
        }
        
        @media (min-width: 992px) {
            .cards-container {
                flex-direction: row;
                height: 600px;
                gap: 0;
                padding: 0;
            }
        }
        
        /* Beating Heart in Center */
        .center-heart {
            position: relative;
            width: 100px;
            height: 100px;
            background: radial-gradient(circle, #ff3366, #ff0066);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem;
            color: white;
            z-index: 30;
            box-shadow: 
                0 0 40px #ff3366,
                inset 0 0 30px rgba(255, 255, 255, 0.3);
            animation: 
                centerHeartbeat 1.2s infinite ease-in-out,
                centerHeartRotate 20s infinite linear;
            cursor: pointer;
            transition: all 0.3s;
            margin: 20px 0;
            order: 1;
        }
        
        @media (min-width: 992px) {
            .center-heart {
                position: absolute;
                margin: 0;
                left: 50%;
                top: 50%;
                transform: translate(-50%, -50%);
                order: 0;
            }
        }
        
        .center-heart:hover {
            transform: scale(1.1);
            box-shadow: 
                0 0 60px #ff3366,
                inset 0 0 40px rgba(255, 255, 255, 0.4);
        }
        
        @media (max-width: 768px) {
            .center-heart {
                width: 80px;
                height: 80px;
                font-size: 2rem;
            }
        }
        
        /* Photo Cards - FIXED FOR MOBILE */
        .photo-card {
            width: 100%;
            max-width: 320px;
            height: 450px;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: 
                0 20px 40px rgba(0, 0, 0, 0.7),
                0 0 30px rgba(255, 255, 255, 0.1);
            z-index: 20;
            border: 10px solid transparent;
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(20px);
            opacity: 0;
            transform: scale(0.9);
            transition: all 0.8s cubic-bezier(0.175, 0.885, 0.32, 1.275);
            position: relative;
        }
        
        @media (min-width: 992px) {
            .photo-card {
                position: absolute;
                width: 320px;
                height: 450px;
                max-width: none;
            }
        }
        
        @media (min-width: 1200px) {
            .photo-card {
                width: 350px;
                height: 500px;
            }
        }
        
        .photo-card.active {
            opacity: 1;
            transform: scale(1);
        }
        
        .card-me {
            border-image: linear-gradient(45deg, #66ccff, #9966ff, #66ffff) 1;
            order: 2;
        }
        
        @media (min-width: 992px) {
            .card-me {
                left: 20%;
                animation: cardFloatLeft 6s infinite ease-in-out;
                order: 0;
            }
        }
        
        .card-you {
            border-image: linear-gradient(45deg, #ff66cc, #ff9966, #ffcc00) 1;
            order: 3;
        }
        
        @media (min-width: 992px) {
            .card-you {
                right: 20%;
                animation: cardFloatRight 6s infinite ease-in-out 0.5s;
                order: 0;
            }
        }
        
        /* DESKTOP CROSSING ANIMATION */
        @media (min-width: 992px) {
            .card-me.crossing {
                animation: crossLeftToRight 3.5s infinite ease-in-out;
            }
            
            .card-you.crossing {
                animation: crossRightToLeft 3.5s infinite ease-in-out;
            }
        }
        
        /* MOBILE CROSSING ANIMATION - FIXED */
        @media (max-width: 991px) {
            .cards-container {
                position: relative;
                height: 1000px;
                overflow: visible;
            }
            
            .photo-card {
                position: absolute !important;
                left: 50% !important;
                right: auto !important;
                transform: translateX(-50%) !important;
                width: 85%;
                max-width: 320px;
                margin: 0 auto;
            }
            
            .card-me {
                top: 150px !important;
                z-index: 25;
            }
            
            .card-you {
                top: 350px !important;
                z-index: 20;
            }
            
            .card-me.crossing {
                animation: mobileCrossUp 4s infinite ease-in-out !important;
            }
            
            .card-you.crossing {
                animation: mobileCrossDown 4s infinite ease-in-out !important;
            }
            
            @keyframes mobileCrossUp {
                0%, 100% { 
                    top: 150px;
                    transform: translateX(-50%) scale(1);
                    z-index: 25;
                }
                25% {
                    top: 250px;
                    transform: translateX(-50%) scale(1.05);
                    z-index: 30;
                }
                50% {
                    top: 150px;
                    transform: translateX(-50%) scale(1);
                    z-index: 25;
                }
                75% {
                    top: 250px;
                    transform: translateX(-50%) scale(1.05);
                    z-index: 30;
                }
            }
            
            @keyframes mobileCrossDown {
                0%, 100% { 
                    top: 350px;
                    transform: translateX(-50%) scale(1);
                    z-index: 20;
                }
                25% {
                    top: 250px;
                    transform: translateX(-50%) scale(1.05);
                    z-index: 35;
                }
                50% {
                    top: 350px;
                    transform: translateX(-50%) scale(1);
                    z-index: 20;
                }
                75% {
                    top: 250px;
                    transform: translateX(-50%) scale(1.05);
                    z-index: 35;
                }
            }
        }
        
        .card-img {
            width: 100%;
            height: 70%;
            object-fit: cover;
            object-position: center;
            filter: brightness(1.1) contrast(1.1);
            transition: transform 0.5s;
        }
        
        .photo-card:hover .card-img {
            transform: scale(1.05);
        }
        
        .card-content {
            padding: 20px;
            height: 30%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            background: linear-gradient(to top, rgba(0, 0, 0, 0.9), transparent);
            text-align: center;
        }
        
        .card-title {
            font-family: 'Rouge Script', cursive;
            font-size: 2.8rem;
            margin-bottom: 10px;
            color: #ffccff;
            text-shadow: 0 0 20px rgba(255, 204, 255, 0.5);
        }
        
        @media (max-width: 768px) {
            .card-title {
                font-size: 2.5rem;
            }
        }
        
        .card-subtitle {
            color: #ccccff;
            font-size: 1.1rem;
            font-family: 'Dancing Script', cursive;
        }
        
        /* Memory Timeline - COMPLETELY REDESIGNED FOR MOBILE */
        .timeline-container {
            max-width: 1000px;
            margin: 60px auto 40px;
            position: relative;
            z-index: 10;
            padding: 0 15px;
        }
        
        @media (max-width: 768px) {
            .timeline-container {
                margin: 40px auto 30px;
                padding: 0 20px;
            }
        }
        
        .timeline {
            position: relative;
            height: 400px;
            overflow: visible;
        }
        
        @media (max-width: 768px) {
            .timeline {
                height: auto;
                min-height: 600px;
                padding-left: 70px;
            }
        }
        
        .timeline-line {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 80%;
            height: 4px;
            background: linear-gradient(90deg, transparent, #ff66cc, #ffcc00, #66ccff, transparent);
            border-radius: 2px;
            z-index: 5;
        }
        
        @media (max-width: 768px) {
            .timeline-line {
                width: 4px;
                height: 90%;
                left: 35px;
                transform: translateY(-50%);
                top: 50%;
                background: linear-gradient(to bottom, transparent, #ff66cc, #ffcc00, #66ccff, transparent);
            }
        }
        
        .timeline-marker {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, #ff0066, #ff6600);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.3rem;
            color: white;
            box-shadow: 0 0 20px rgba(255, 102, 204, 0.7);
            cursor: pointer;
            transition: all 0.3s;
            z-index: 10;
            border: 3px solid rgba(255, 255, 255, 0.2);
        }
        
        .timeline-marker:hover {
            transform: translateY(-50%) scale(1.2);
            box-shadow: 0 0 40px rgba(255, 102, 204, 1);
        }
        
        /* Desktop marker positions */
        .timeline-marker:nth-child(1) {
            left: 15%;
        }
        
        .timeline-marker:nth-child(2) {
            left: 35%;
        }
        
        .timeline-marker:nth-child(3) {
            left: 55%;
        }
        
        .timeline-marker:nth-child(4) {
            left: 75%;
        }
        
        /* Mobile marker positions - COMPLETELY REDONE */
        @media (max-width: 768px) {
            .timeline-marker {
                position: absolute !important;
                left: 35px !important;
                transform: translateX(-50%) !important;
                width: 50px;
                height: 50px;
                font-size: 1.5rem;
                top: 0 !important;
                margin-bottom: 0;
            }
            
            .timeline-marker:nth-child(1) {
                top: 10% !important;
            }
            
            .timeline-marker:nth-child(2) {
                top: 30% !important;
            }
            
            .timeline-marker:nth-child(3) {
                top: 50% !important;
            }
            
            .timeline-marker:nth-child(4) {
                top: 70% !important;
            }
            
            .timeline-marker:hover {
                transform: translateX(-50%) scale(1.2) !important;
            }
        }
        
        .timeline-content {
            position: absolute;
            top: -150px;
            left: 0;
            width: 300px;
            padding: 15px;
            background: rgba(255, 255, 255, 0.1);
          
            border-radius: 15px;
            border: 1px solid rgba(255, 102, 204, 0.3);
            opacity: 0;
            transform: translateY(20px);
            transition: all 0.5s;
            pointer-events: none;
            z-index: 20;
        }
        
        /* Desktop content positioning */
        .timeline-marker:nth-child(1) .timeline-content {
            left: -20px;
        }
        
        .timeline-marker:nth-child(2) .timeline-content {
            left: -140px;
        }
        
        .timeline-marker:nth-child(3) .timeline-content {
            left: -260px;
        }
        
        .timeline-marker:nth-child(4) .timeline-content {
            left: -380px;
        }
        
        .timeline-marker:hover .timeline-content {
            opacity: 1;
            transform: translateY(0);
            pointer-events: all;
        }
        
        /* MOBILE TIMELINE CONTENT - COMPLETELY REDESIGNED */
       @media (max-width: 768px) {
    .timeline-content {
        position: absolute !important;
        top: 50% !important;
        left: 80px !important;

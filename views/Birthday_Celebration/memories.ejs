            font-size: 2.2rem;
            background: linear-gradient(to right, #ff66cc, #ffcc00);
            -webkit-background-clip: text;
            background-clip: text;
            color: transparent;
            text-decoration: none;
            position: relative;
            padding-right: 15px;
            white-space: nowrap;
        }

        .nav-logo::after {
            content: '';
            position: absolute;
            right: 0;
            top: 50%;
            transform: translateY(-50%);
            width: 2px;
            height: 30px;
            background: linear-gradient(to bottom, #ff66cc, #ffcc00);
            animation: pulseGlow 2s infinite;
        }

        /* HAMBURGER MENU */
.hamburger {
    display: none; /* Desktop par hide */
    cursor: pointer;
    background: rgba(255, 102, 204, 0.1);
    border: none;
    color: white;
    font-size: 1.8rem;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    z-index: 1001;
}

.hamburger:hover {
    background: rgba(255, 102, 204, 0.2);
    transform: scale(1.05);
}

/* Mobile par show */
@media (max-width: 768px) {
    .hamburger {
        display: flex;
    }
}


        .nav-menu {
            display: flex;
            gap: 25px;
            list-style: none;
            margin: 0;
            padding: 0;
        }

        .nav-item {
            position: relative;
        }

        .nav-link {
            color: #fff;
            text-decoration: none;
            font-size: 1.1rem;
            font-weight: 600;
            padding: 10px 18px;
            border-radius: 50px;
            transition: all 0.4s ease;
            display: flex;
            align-items: center;
            gap: 8px;
            position: relative;
            overflow: hidden;
            white-space: nowrap;
        }

        .nav-link::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.7s;
        }

        .nav-link:hover::before {
            left: 100%;
        }

        .nav-link:hover {
            background: linear-gradient(135deg, rgba(255, 102, 204, 0.2), rgba(255, 204, 0, 0.2));
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(255, 102, 204, 0.3);
        }

        .nav-link.active {
            background: linear-gradient(135deg, #ff0066, #ff6600);
            box-shadow: 0 0 30px rgba(255, 102, 204, 0.5);
        }

        .nav-icon {
            font-size: 1.3rem;
            animation: rotateIcon 3s infinite linear;
        }

        @keyframes pulseGlow {

            0%,
            100% {
                opacity: 0.5;
            }

            50% {
                opacity: 1;
            }
        }

        @keyframes rotateIcon {
            from {
                transform: rotate(0deg);
            }

            to {
                transform: rotate(360deg);
            }
        }

        /* MEMORIES SECTION STYLES */
        .memories-section {
            padding-top: 100px;
            min-height: 100vh;
            position: relative;
            overflow: hidden;
        }

        /* Stars Background */
        .stars {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            pointer-events: none;
        }

        .star {
            position: absolute;
            background-color: #fff;
            border-radius: 50%;
            animation: twinkle 5s infinite;
        }

        @keyframes twinkle {

            0%,
            100% {
                opacity: 0.2;
            }

            50% {
                opacity: 1;
            }
        }

        /* Memories Title Container */
        .memories-title-container {
            text-align: center;
            padding: 40px 20px;
            position: relative;
            z-index: 10;
        }

        .memories-main-title {
            font-family: 'Dancing Script', cursive;
            font-size: 4rem;
            color: #ffcc00;
            margin-bottom: 20px;
            text-shadow: 0 0 30px rgba(255, 204, 0, 0.5);
            animation: titleSparkle 4s infinite alternate;
        }

        .memories-subtitle {
            font-family: 'Great Vibes', cursive;
            font-size: 2.5rem;
            color: #ff66cc;
            margin-bottom: 30px;
        }

        .heart-divider {
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 20px;
            margin: 30px 0;
        }

        .heart-divider-line {
            width: 150px;
            height: 2px;
            background: linear-gradient(90deg, transparent, #ff66cc, transparent);
        }

        .heart-divider-icon {
            font-size: 2rem;
            color: #ff3366;
            animation: heartbeat 1.5s infinite;
        }

        /* Album Container */
        .album-container {
            max-width: 800px;
            margin: 40px auto;
            padding: 0 20px;
            perspective: 1000px;
        }

        .photo-album {
            position: relative;
            width: 100%;
            height: 500px;
            transform-style: preserve-3d;
            transform-origin: left center;
            transition: transform 2s cubic-bezier(0.68, -0.55, 0.265, 1.55);
            cursor: pointer;
            animation: albumFloat 8s infinite ease-in-out;
        }

        .photo-album.open {
            transform: rotateY(-180deg);
        }

        .album-cover,
        .album-content {
            position: absolute;
            width: 100%;
            height: 100%;
            backface-visibility: hidden;
            border-radius: 20px;
            overflow: hidden;
            padding: 40px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
        }

        .album-cover {
            background: linear-gradient(135deg, #0066ff, #6600ff, #cc00ff);
            box-shadow: 0 30px 80px rgba(102, 0, 255, 0.5),
                inset 0 0 60px rgba(255, 255, 255, 0.1);
        }

        .album-content {
            background: linear-gradient(135deg, #1a0033, #33001a);
            transform: rotateY(180deg);
        }

        .album-lock {
            width: 100px;
            height: 100px;
            background: radial-gradient(circle, #00ccff, #0066ff);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 30px;
            cursor: pointer;
            box-shadow: 0 0 50px #00ccff;
            animation: lockGlow 3s infinite alternate;
            transition: all 0.3s ease;
        }

        .album-lock:hover {
            transform: scale(1.1);
            box-shadow: 0 0 70px #00ccff;
        }

        .album-lock-icon {
            font-size: 3rem;
            color: white;
        }

        .album-instruction {
            margin-top: 30px;
            color: white;
            font-size: 1.2rem;
            animation: pulseInstruction 2s infinite;
        }

        /* Memory Grid */
        .memory-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
            width: 100%;
            max-width: 600px;
            margin: 0 auto;
        }

        .memory-item {
            background: linear-gradient(135deg, rgba(255, 102, 204, 0.2), rgba(102, 0, 255, 0.2));
            border-radius: 15px;
            height: 120px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 3rem;
            cursor: pointer;
            transition: all 0.3s ease;
            border: 2px solid transparent;
        }

        .memory-item:hover {
            transform: scale(1.1) rotate(5deg);
            background: linear-gradient(135deg, rgba(255, 102, 204, 0.4), rgba(102, 0, 255, 0.4));
            border-color: #ff66cc;
            box-shadow: 0 10px 30px rgba(255, 102, 204, 0.4);
        }

        /* Memory Modal */
        .memory-modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.9);
            backdrop-filter: blur(10px);
            z-index: 2000;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }

        .memory-modal.active {
            display: flex;
        }

        .memory-modal-content {
            background: linear-gradient(135deg, #1a0033, #33001a);
            max-width: 500px;
            width: 95%;
            border-radius: 20px;
            padding: 40px;
            position: relative;
            box-shadow: 0 30px 80px rgba(102, 0, 255, 0.5);
            border: 2px solid rgba(255, 102, 204, 0.3);
            animation: popupSlideUp 0.5s ease;
        }

        .close-memory {
            position: absolute;
            top: 15px;
            right: 15px;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: linear-gradient(135deg, #ff0066, #ff6600);
            border: none;
            color: white;
            font-size: 1.2rem;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
        }

        .close-memory:hover {
            transform: scale(1.1) rotate(90deg);
            background: linear-gradient(135deg, #ff6600, #ff0066);
        }

        .memory-modal-content h3 {
            font-family: 'Dancing Script', cursive;
            font-size: 2.5rem;
            color: #ffcc00;
            margin-bottom: 20px;
        }

        .memory-modal-content p {
            color: #ccccff;
            font-size: 1.1rem;
            line-height: 1.6;
        }

        /* Permission Modal */
        .memories-permission-modal {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.9);
            backdrop-filter: blur(10px);
            z-index: 2000;
            justify-content: center;
            align-items: center;
            padding: 20px;
        }

        .memories-permission-modal.active {
            display: flex;
        }

        .memories-permission-content {
            background: linear-gradient(135deg, #1a0033, #33001a);
            max-width: 600px;
            width: 95%;
            border-radius: 20px;
            padding: 40px;
            text-align: center;
            box-shadow: 0 30px 80px rgba(102, 0, 255, 0.5);
            border: 2px solid rgba(255, 102, 204, 0.3);
            animation: popupSlideUp 0.5s ease;
        }

        .memories-permission-content h2 {
            font-family: 'Dancing Script', cursive;
            font-size: 3rem;
            color: #ffcc00;
            margin-bottom: 20px;
        }

        .memories-permission-content p {
            color: #ccccff;
            font-size: 1.2rem;
            margin-bottom: 20px;
            line-height: 1.6;
        }

        .memories-permission-buttons {
            display: flex;
            gap: 20px;
            justify-content: center;
            margin-top: 30px;
            flex-wrap: wrap;
        }

        .memories-permission-btn {
            padding: 15px 30px;
            border: none;
            border-radius: 50px;
            font-family: 'Poppins', sans-serif;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 10px;
            color: white;
            min-width: 250px;
            justify-content: center;
        }

        .memories-yes-btn {
            background: linear-gradient(135deg, #00cc66, #00ff99);
        }

        .memories-no-btn {
            background: linear-gradient(135deg, #6666ff, #9999ff);
        }

        .memories-permission-btn:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
        }

        /* Animations */
        @keyframes albumFloat {

            0%,
            100% {
                transform: translateY(0) rotateY(0deg);
            }

            50% {
                transform: translateY(-20px) rotateY(5deg);
            }
        }

        @keyframes lockGlow {
            0% {
                box-shadow: 0 0 30px #00ccff;
            }

            100% {
                box-shadow: 0 0 60px #00ccff, 0 0 90px #00ccff;
            }
        }

        @keyframes pulseInstruction {

            0%,
            100% {
                opacity: 0.7;
            }

            50% {
                opacity: 1;
            }
        }

        @keyframes popupSlideUp {
            from {
                transform: translateY(50px) scale(0.9);
                opacity: 0;
            }

            to {
                transform: translateY(0) scale(1);
                opacity: 1;
            }
        }

        @keyframes heartbeat {

            0%,
            100% {
                transform: scale(1);
            }

            25% {
                transform: scale(1.1);
            }

            50% {
                transform: scale(1);
            }

            75% {
                transform: scale(1.05);
            }
        }

        /* Responsive Design */
        @media (max-width: 992px) {
            .photo-album {
                height: 450px;
            }

            .memories-main-title {
                font-size: 3.5rem;
            }

            .memories-subtitle {
                font-size: 2rem;
            }

            .memory-grid {
                gap: 15px;
            }

            .memory-item {
                height: 100px;
                font-size: 2.5rem;
            }
        }

        @media (max-width: 768px) {
            /* Mobile Menu Styles */
            .hamburger {
                display: flex;
            }

            .nav-menu {
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100vh;
                background: rgba(10, 10, 42, 0.98);
                backdrop-filter: blur(20px);
                flex-direction: column;
                justify-content: center;
                align-items: center;
                gap: 25px;
                transform: translateX(100%);
                transition: transform 0.5s ease;
                z-index: 999;
            }

            .nav-menu.active {
                transform: translateX(0);
            }

            .nav-item {
                width: 100%;
                max-width: 300px;
                text-align: center;
            }

            .nav-link {
                width: 100%;
                justify-content: center;
                padding: 18px;
                font-size: 1.2rem;
                border-radius: 15px;
            }

            .memories-section {
                padding-top: 80px;
            }

            .memories-main-title {
                font-size: 3rem;
            }

            .memories-subtitle {
                font-size: 1.8rem;
            }

            .photo-album {
                height: 400px;
            }

            .album-cover,
            .album-content {
                padding: 25px;
            }

            .album-lock {
                width: 80px;
                height: 80px;
            }

            .album-lock-icon {
                font-size: 2.5rem;
            }

            .memory-grid {
                grid-template-columns: repeat(2, 1fr);
            }

            .memories-permission-content {
                padding: 30px 20px;
            }

            .memories-permission-content h2 {
                font-size: 2.5rem;
            }

            .memories-permission-buttons {
                flex-direction: column;
                align-items: center;
            }

            .memories-permission-btn {
                width: 100%;
                min-width: auto;
            }
        }

        @media (max-width: 480px) {
            .nav-logo {
                font-size: 1.5rem;
            }

            .memories-main-title {
                font-size: 2.5rem;
            }

            .memories-subtitle {
                font-size: 1.5rem;
            }

            .photo-album {
                height: 350px;
            }

            .album-lock {
                width: 70px;
                height: 70px;
            }

            .album-lock-icon {
                font-size: 2rem;
            }

            .memory-grid {
                grid-template-columns: repeat(2, 1fr);
                gap: 10px;
            }

            .memory-item {
                height: 80px;
                font-size: 2rem;
            }

            .memories-permission-content h2 {
                font-size: 2rem;
            }

            .memories-permission-content p {
                font-size: 1rem;
            }

            .memory-modal-content {
                padding: 30px 20px;
            }

            .memory-modal-content h3 {
                font-size: 2rem;
            }
        }
    </style>
</head>
